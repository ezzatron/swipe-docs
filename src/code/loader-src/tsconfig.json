{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "../loader",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "../loader",
    "sourceMap": true
  },
  "include": [
    "./*.ts",
    "transform-add-sections.ts",
    "transform-cleanup-lines.ts",
    "transform-trim-section-lines.ts",
    "split-lines.ts",
    "transform-wrap-whitespace.ts"
  ]
}
